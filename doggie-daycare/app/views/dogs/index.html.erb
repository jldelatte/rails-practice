<p id="notice"><%= notice %></p>

<h1>Where my dogs at?</h1>

<table class ="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Breed</th>
      <th>Age</th>
      <th>Owner</th>
      <th>Updated</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.id %></td>
        <td><%= dog.name %></td>
        <td><%= dog.breed %></td>
        <td><%= dog.age %></td>
        <td><%= dog.owner.try(:name) %></td>
       <td><%=dog.updated_at.stamp('4/3/2015') %></td>
        <td><%= link_to fa_icon('eye', text: 'Show'), dog %></td>
       <td><%= link_to fa_icon('pencil', text: 'Edit'), edit_dog_path(dog) %></td>
       <td><%= link_to fa_icon('trash-o', text: 'Destroy'), dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dog', new_dog_path, class:"btn btn-danger" %>
