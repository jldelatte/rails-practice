      <ul>
      <% @dog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:"form-control" , placeholder:"Fido" %>
  </div>
  <div class="field form-group">
    <%= f.label :breed %><br>
    <%= f.text_field :breed, class:"form-control" , placeholder:"Muts" %>
  </div>

  <div class="field form-group">
    <%= f.label :age %><br>
    <%= f.text_field :age, class:"form-control", placeholder:"2" %>
  </div>

  <div class="field form-group">
      <%= f.label :owner%><br>
    <%= f.collection_select :owner_id, Owner.all, :id, :name, {prompt: "Select an owner"} , {class:"form-control"}%>


  </div>
  <div class="actions">
    <%= f.submit "Save Dog", class: "btn btn-success" %>

  </div>
<% end %>
